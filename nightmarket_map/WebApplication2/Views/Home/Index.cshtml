@model IEnumerable<WebApplication2.Models.NightMarket>

@{
    //Layout = null;
    ViewBag.Title = "DTC夜市通";
}
    <h2>台中市知名夜市</h2>


    <table class="table">
        <tr>
            <th>
                編號
            </th>
            <th>
                名稱
            </th>
            <th>
                地址
            </th>
            <th></th>
        <tr>

        @foreach (var item in Model)
        {
            string imgName = item.Id + ".jpg";
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                   @Html.DisplayFor(modelItem => item.Name)<br />
                    <img src="~/Images/@imgName" width="150" class="img-thumbnail" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    <a href="https://www.google.com.tw/maps/place/@item.Address" target="_blank">規劃路線</a>
                </td>
            </tr>
        }</table>